<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PomodoroTimer_Myself" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Status bar Text color; true->black, false->white -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <!-- 화면 실행 처음부터 토마토색이 나올 수 있도록 설정 -->
        <item name="android:windowBackground">@color/pomodoro_red</item>
    </style>
</resources>